USE [AIDE]
GO
/****** Object:  StoredProcedure [dbo].[sp_GetAllSabaXref]    Script Date: 5/31/2019 3:41:32 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[sp_GetAllSabaXref]
@EMP_ID int,
@SABA_ID int
AS
DECLARE
		@DEPT_ID INT = (SELECT A.DEPT_ID FROM EMPLOYEE A INNER JOIN CONTACTS B
					   ON A.EMP_ID = B.EMP_ID WHERE B.EMP_ID = @EMP_ID),
		@DIV_ID INT = (SELECT A.DIV_ID FROM EMPLOYEE A INNER JOIN CONTACTS B
					   ON A.EMP_ID = B.EMP_ID WHERE B.EMP_ID = @EMP_ID)
		
BEGIN							
	
	SELECT  a.SABA_ID as SABA_ID, a.EMP_ID AS EMP_ID, a.DATE_COMPLETED as DATE_COMPLETED, b.FIRST_NAME + ' ' + b.LAST_NAME as IMAGE_PATH 
	from [dbo].[SABA_XREF] a INNER JOIN EMPLOYEE B
	ON A.EMP_ID = B.EMP_ID
	WHERE B.DEPT_ID = @DEPT_ID AND B.DIV_ID = @DIV_ID AND a.SABA_ID = @SABA_ID


END
