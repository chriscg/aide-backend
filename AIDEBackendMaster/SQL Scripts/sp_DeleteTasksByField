/****** Object:  StoredProcedure [dbo].[sp_DeleteTasksByField]    Script Date: 5/31/2019 3:19:16 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[sp_DeleteTasksByField]
	@FieldName varchar(100),
	@Value varchar(1000)
AS

	DECLARE @query varchar(2000);

	SET @query = 'DELETE FROM [dbo].[TASKS] WHERE [' + @FieldName  + '] = ''' + @Value + ''''
	EXEC(@query)


