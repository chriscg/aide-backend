USE [AIDE]
GO
/****** Object:  StoredProcedure [dbo].[sp_UpdateTasksStatus]    Script Date: 5/31/2019 4:48:57 PM ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO

CREATE PROCEDURE [dbo].[sp_UpdateTasksStatus] 
	@EMP_ID INT, 
	@TASKS_ID INT, 
	@INC_ID VARCHAR(15),
	@DATE_STARTED DATE,
	@TARGET_DATE DATE, 
	@COMPLTD_DATE DATE, 
	@STATUS SMALLINT, 
	@REMARKS VARCHAR(50), 
	@EFFORT_EST FLOAT,
	@ACT_EFFORT_EST FLOAT, 
	@ACT_EFFORT_EST_WK FLOAT, 
	@INC_DESCR VARCHAR(50)
AS

SET NOCOUNT ON

UPDATE TASKS
    SET 
		[INC_ID] = @INC_ID,
		[COMPLTD_DATE] =  @COMPLTD_DATE,
		[DATE_STARTED] = @DATE_STARTED,
		[TARGET_DATE] = @TARGET_DATE,
        [STATUS] = @STATUS, 
        [REMARKS] = @REMARKS,
		[EFFORT_EST] = @EFFORT_EST,
		[ACT_EFFORT_EST] = @ACT_EFFORT_EST,
		[ACT_EFFORT_EST_WK] = @ACT_EFFORT_EST_WK,
		[INC_DESCR] = @INC_DESCR

    WHERE EMP_ID = @EMP_ID AND TASK_ID = @TASKS_ID

